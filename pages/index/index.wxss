.welcome{
  font-family: 'STXingkai';
  font-size: 27px;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.backView{
  position: relative;
  width: 750rpx;
  height: 800px;
  background: white;
}
.blackImage{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 11;
}
.share-btn{
  width: 100%;
  position: fixed;
  margin-bottom: 0;
  font-family: 'STXingkai';
  color: #333;
  font-size: 25px;
  border-radius: 50px;
}
.item-container{
  padding: 25rpx;
  background: white;
  border: lightsalmon;
  flex-direction: row;
  border-width: 10rpx
}
.item-detail{
  margin-left: 20rpx;
  padding:25rpx;
  flex-direction: column;
  line-height: 70rpx
}
.item-name{
  font-family: 'STXingkai';
  font-size: 25px;
  color: #333;
  padding: 30rpx;
  margin-left: 0rpx;
  background-color: #db97ec38;
  text-align: center;
  line-height:100%;
  border-radius: 50px
}
